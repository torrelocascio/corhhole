<div class="container-fluid">
  <div class="home-heading text-center row">
    <div class="home-heading-wrapper sm">
      <h1 class="sm">Cornholers thrive here.</h1>
      <p class="sm">Cornhole League creators pursue friendly competetition, fun, and bonding. Take Initiative, be that guy or gal. </p>
    </div>
  </div>
</div>

<div class="campaign-row row">
  <h3 class="text-center">All Leagues</h3>
  <% leagues.forEach((league) => { %>
    <div class="col-sm-3 home-campaign-box">
      <img src="http://noideasports.com/wp-content/uploads/2017/01/cornhole.png">
      <div class="campaign-info-wrapper">
        League Name:
        <a class="title" href="/leagues/<%= league._id %>">
          <strong><%= league.leagueName %></strong>
        </a><br>
        Created By <span class="light-text"><%= league._creator %></span><br>
        <span class="light-text description">Number of Teams: <%= league.teams.length %></span>
        <form action="/:id/delete"><button type="submit" style="margin-top:20px">Delete League</button></form>
      </div>
    </div>
  <%  }) %>
</div>

    
